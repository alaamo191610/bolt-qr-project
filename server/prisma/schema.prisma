generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id                 String   @id @default(uuid()) @db.Uuid
  email              String   @unique
  password           String?
  restaurant_name    String?
  logo_url           String?  @db.Text // Restaurant logo (base64 or URL)
  phone              String?
  address            String?
  description        String?
  order_rules        Json?    @default("{}")
  kds_prefs          Json?    @default("{}")
  pricing_prefs      Json?    @default("{}")
  billing_settings   Json?    @default("{}")
  theme              Json?    @default("{}")
  theme_mode         String?  @default("light")
  theme_color        String?
  font_family        String?  @default("Inter")
  preferred_language String?  @default("en")
  created_at         DateTime @default(now()) @db.Timestamptz

  // ðŸ†• Subscription Fields
  subscription_plan   String   @default("STANDARD") // STANDARD, BASIC, PRO
  subscription_status String   @default("ACTIVE") // ACTIVE, PAST_DUE, CANCELLED, TRIAL
  subscription_end    DateTime? @db.Timestamptz
  trial_ends_at       DateTime? @db.Timestamptz
  
  // ðŸ†• Plan Limits
  max_tables          Int      @default(10)
  max_menu_items      Int      @default(50)
  max_staff_accounts  Int      @default(1)

  menus  Menu[]
  tables Table[]
  orders Order[]

  @@map("admins")
}


model Category {
  id         Int      @id @default(autoincrement())
  name_en    String
  name_ar    String?
  sort_order Int?     @default(0)
  created_at DateTime @default(now()) @db.Timestamptz

  menus Menu[]

  @@map("categories")
}

model Ingredient {
  id         Int      @id @default(autoincrement())
  name_en    String
  name_ar    String?
  created_at DateTime @default(now()) @db.Timestamptz

  menu_ingredients MenuIngredient[]

  @@map("ingredients")
}

model Menu {
  id             Int       @id @default(autoincrement())
  user_id        String?   @db.Uuid
  category_id    Int?
  name_en        String
  name_ar        String?
  description_en String?
  description_ar String?
  price          Decimal   @default(0) @db.Decimal(10, 2)
  image_url      String?
  available      Boolean?  @default(true)
  deleted_at     DateTime? @db.Timestamptz
  created_at     DateTime  @default(now()) @db.Timestamptz

  // ðŸ†• UX Enhancement Fields
  tags                String[]  @default([]) // ["spicy", "vegan", "best_seller", "new", "popular"]
  is_featured         Boolean   @default(false) // For stories/hero section
  has_modifiers       Boolean   @default(false) // Quick-add eligibility check
  suggested_items_ids Int[]     @default([]) // Manual upsell suggestions (array of menu IDs)

  admin            Admin?           @relation(fields: [user_id], references: [id])
  category         Category?        @relation(fields: [category_id], references: [id])
  menu_ingredients MenuIngredient[]
  order_items      OrderItem[]
  menu_modifier_groups MenuModifierGroup[]
  combo_items          ComboGroupItem[]

  @@index([user_id])
  @@map("menus")
}

model MenuIngredient {
  menu_id              Int
  ingredient_id        Int
  removable            Boolean @default(true)
  extra_available      Boolean @default(false)
  max_extra            Int     @default(0)
  extra_price_override Decimal? @db.Decimal(10, 2)

  menu       Menu       @relation(fields: [menu_id], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredient_id], references: [id], onDelete: Cascade)

  @@id([menu_id, ingredient_id])
  @@map("menu_ingredients")
}

model ModifierGroup {
  id             Int      @id @default(autoincrement())
  name_en        String
  name_ar        String?
  selection_type String?  @default("single")
  min_select     Int?     @default(0)
  max_select     Int?     @default(1)
  required       Boolean? @default(false)
  created_at     DateTime @default(now()) @db.Timestamptz

  modifier_options      ModifierOption[]
  menu_modifier_groups MenuModifierGroup[]

  @@map("modifier_groups")
}

model ModifierOption {
  id          Int      @id @default(autoincrement())
  group_id    Int
  name_en     String
  name_ar     String?
  price_delta Decimal  @default(0) @db.Decimal(10, 2)
  max_qty     Int?     @default(1)
  is_default  Boolean? @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz

  modifier_group ModifierGroup @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@map("modifier_options")
}

model MenuModifierGroup {
  menu_id  Int
  group_id Int

  menu           Menu          @relation(fields: [menu_id], references: [id], onDelete: Cascade)
  modifier_group ModifierGroup @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@id([menu_id, group_id])
  @@map("menu_modifier_groups")
}

model ComboGroup {
  id         Int      @id @default(autoincrement())
  menu_id    Int
  min_select Int?     @default(1)
  max_select Int?     @default(1)
  created_at DateTime @default(now()) @db.Timestamptz

  combo_group_items ComboGroupItem[]

  @@map("combo_groups")
}

model ComboGroupItem {
  id                  Int      @id @default(autoincrement())
  group_id            Int
  child_menu_id       Int
  upgrade_price_delta Decimal  @default(0) @db.Decimal(10, 2)
  is_default          Boolean? @default(false)

  combo_group ComboGroup @relation(fields: [group_id], references: [id], onDelete: Cascade)
  menus       Menu       @relation(fields: [child_menu_id], references: [id], onDelete: Cascade)

  @@map("combo_group_items")
}

model Table {
  id         Int      @id @default(autoincrement())
  admin_id   String?  @db.Uuid
  code       String
  capacity   Int?     @default(4)
  status     String?  @default("available")
  created_at DateTime @default(now()) @db.Timestamptz

  admin  Admin?  @relation(fields: [admin_id], references: [id])
  orders Order[]

  @@unique([admin_id, code])
  @@map("tables")
}

model Order {
  id         Int      @id @default(autoincrement())
  admin_id   String?  @db.Uuid
  table_id   Int?
  total      Decimal? @default(0) @db.Decimal(10, 2)
  status     String?  @default("pending")
  type       String?  @default("dine_in") // "dine_in" or "take_away"
  created_at DateTime @default(now()) @db.Timestamptz
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz

  admin       Admin?      @relation(fields: [admin_id], references: [id])
  table       Table?      @relation(fields: [table_id], references: [id])
  order_items OrderItem[]

  @@index([admin_id])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id             Int      @id @default(autoincrement())
  order_id       Int?
  menu_id        Int?
  quantity       Int?     @default(1)
  price_at_order Decimal  @db.Decimal(10, 2)
  note           String?
  created_at     DateTime @default(now()) @db.Timestamptz

  order Order? @relation(fields: [order_id], references: [id])
  menu  Menu?  @relation(fields: [menu_id], references: [id])

  @@map("order_items")
}

// ðŸ†• Super Admin Model for platform management
model SuperAdmin {
  id         String   @id @default(uuid()) @db.Uuid
  email      String   @unique
  password   String
  name       String?
  role       String   @default("SUPER_ADMIN") // For future role expansion
  created_at DateTime @default(now()) @db.Timestamptz
  last_login DateTime? @db.Timestamptz

  @@map("super_admins")
}